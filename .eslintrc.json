{
  "env": {
  "browser": true,
  "es2021": true,
  "jest": true
},
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "plugins": ["react", "jsx-a11y"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // add any custom rules here if needed
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
